# Vector Store Configuration
# Options: weaviate, pinecone, memory (in-memory only for testing)
VECTOR_STORE_TYPE=memory

# Weaviate Configuration (when VECTOR_STORE_TYPE=weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Pinecone Configuration (when VECTOR_STORE_TYPE=pinecone)
PINECONE_API_KEY=
PINECONE_INDEX=memory-mcp
PINECONE_ENVIRONMENT=

# Embedding Configuration
# Options: openai, local
EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# Memory Layer Configuration (in milliseconds)
WORKING_MEMORY_TTL=1800000           # 30 minutes
SHORT_TERM_MEMORY_TTL=604800000      # 7 days
LONG_TERM_MEMORY_TTL=31536000000     # 1 year

# Consolidation Configuration
CONSOLIDATION_THRESHOLD=100          # Number of memories before consolidation
CONSOLIDATION_AGE=2592000000         # 30 days in milliseconds

# Importance Decay Configuration
DECAY_RATE=0.1                       # Exponential decay rate
DECAY_INTERVAL=86400000              # Daily decay in milliseconds

# MCP Server Configuration
MCP_SERVER_NAME=persistent-memory
MCP_SERVER_VERSION=1.0.0
